{
    "app-id": "org.gabmus.swatch",
    "command": "swatch",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "modules": [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.6.0"
                }
            ]
        },
        {
            "name": "swatch",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "--buildtype=release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GabMus/swatch",
                    "tag": "1.1"
                }
            ]
        }
    ]
}
